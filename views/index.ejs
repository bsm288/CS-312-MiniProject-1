<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Mini Blog</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/styles.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">Mini Blog</a>
    </div>
  </nav>
  <main class="container my-4">
    <section class="mb-4">
      <h2 class="mb-3">Create a Post</h2>
      <form method="post" action="/posts" class="row g-3">
        <div class="col-md-6">
          <label class="form-label">Your Name</label>
          <input name="author" class="form-control" required>
        </div>
        <div class="col-md-6">
          <label class="form-label">Title</label>
          <input name="title" class="form-control" required>
        </div>
        <div class="col-12">
          <label class="form-label">Content</label>
          <textarea name="content" class="form-control" rows="6" required></textarea>
        </div>
        <div class="col-12">
          <button class="btn btn-primary">Publish</button>
        </div>
      </form>
    </section>
    <hr>
    <section>
      <h2 class="mb-3">Posts</h2>
      <% if (posts.length === 0) { %>
        <p class="text-muted">No posts yet.</p>
      <% } %>
      <div class="row g-4">
        <% posts.forEach(p => { %>
          <div class="col-12">
            <div class="card shadow-sm">
              <div class="card-body">
                <h3 class="h5 card-title"><%= p.title %></h3>
                <p class="text-muted mb-2">by <strong><%= p.author %></strong> • <%= p.createdAt %> <% if (p.updatedAt) { %> • updated <%= p.updatedAt %> <% } %></p>
                <p class="card-text prewrap"><%= p.content %></p>
                <div class="d-flex gap-2">
                  <a class="btn btn-outline-secondary btn-sm" href="/posts/<%= p.id %>/edit">Edit</a>
                  <form method="post" action="/posts/<%= p.id %>/delete">
                    <button class="btn btn-outline-danger btn-sm">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </section>
  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
